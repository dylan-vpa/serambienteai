generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(uuid())
  email            String         @unique
  password         String
  name             String
  role             String         @default("USER") // SUPER_ADMIN, ADMIN, ENGINEER, USER
  pushSubscription String?        // JSON string with push subscription data
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  notifications    Notification[]
  assignedOITs     OITAssignment[]
}

model OIT {
  id                    String         @id @default(uuid())
  oitNumber             String         @unique
  description           String?
  location              String?        // Sampling site address
  status                String         @default("PENDING") // UPLOADING, ANALYZING, REVIEW_REQUIRED, SCHEDULED, IN_PROGRESS, COMPLETED
  oitFileUrl            String?
  quotationFileUrl      String?        // DEPRECATED: Use quotationId instead
  quotationId           String?        // Link to independent Quotation
  quotation             Quotation?     @relation(fields: [quotationId], references: [id])
  samplingReportUrl     String?        // Generated sampling report
  labResultsUrl         String?        // Uploaded lab analysis
  finalReportUrl        String?        // Final AI-generated report
  labResultsAnalysis    String?        // JSON string with AI analysis of lab results
  aiData                String?        // JSON string
  resources             String?        // JSON string
  scheduledDate         DateTime?
  samplingData          String?        // JSON with offline sampling data
  pendingSync           Boolean        @default(false)
  selectedTemplateIds   String?        // JSON array of selected template IDs
  planningProposal      String?        // JSON with AI planning proposal
  planningAccepted      Boolean        @default(false)
  samplingProgress      String?        // JSON: { currentStep: number, completedSteps: number[] }
  stepValidations       String?        // JSON: { [stepIndex]: { validated: bool, feedback: string, data: any } }
  finalAnalysis         String?        // AI comprehensive analysis when sampling completes
  serviceDates          String?        // JSON: { [templateId]: ISODateString }
  fieldFormUrl          String?        // URL to uploaded field form (Planilla)
  fieldFormAnalysis     String?        // JSON: Verification results from AI
  samplingSheetUrl      String?        // URL to uploaded sampling sheets (planillas)
  samplingSheetAnalysis String?        // JSON: Quality analysis from AI before final report
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  notifications         Notification[]
  assignedEngineers     OITAssignment[]
}

model Quotation {
  id                String    @id @default(uuid())
  quotationNumber   String    @unique
  description       String?
  clientName        String?
  fileUrl           String?
  extractedText     String?   // Extracted text from PDF for AI analysis
  status            String    @default("PENDING") // PENDING, ANALYZING, COMPLIANT, NON_COMPLIANT, REVIEW_REQUIRED
  aiData            String?   // JSON with AI analysis
  complianceResult  String?   // JSON with compliance check results
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  linkedOITs        OIT[]     // OITs that use this quotation
}

model OITAssignment {
  id          String   @id @default(uuid())
  oitId       String
  oit         OIT      @relation(fields: [oitId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignedAt  DateTime @default(now())

  @@unique([oitId, userId])
}

model Resource {
  id                    String    @id @default(uuid())
  name                  String    // Tipo equipo
  type                  String    // Matriz (Calidad del aire, Agua, etc.)
  code                  String?   @unique // Código Interno (H2S-001, etc.)
  brand                 String?   // Marca
  model                 String?   // Modelo
  serial                String?   // Serial
  location              String?   // Ubicación
  maintenanceType       String?   // Tipo mantenimiento
  maintenanceFrequency  String?   // Frecuencia mantenimiento
  requiresCalibration   Boolean   @default(false)
  calibrationFrequency  String?   
  calibrationExpiry     DateTime? // Vigencia calibración
  variable              String?   // Variable que mide
  workRange             String?   // Rango de trabajo
  resolution            String?   // Resolución
  calibrationPoints     String?   // Puntos calibración
  status                String    @default("AVAILABLE") // OPERATIVO, MANTENIMIENTO, FUERA_SERVICIO
  observations          String?   // Observaciones
  quantity              Int       @default(1)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  oitId     String?
  oit       OIT?     @relation(fields: [oitId], references: [id])
  title     String
  message   String
  type      String   @default("INFO") // INFO, SUCCESS, WARNING, ERROR
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Standard {
  id          String   @id @default(uuid())
  title       String
  description String
  type        String   // OIT, QUOTATION
  fileUrl     String?  // URL to the uploaded standard document
  content     String?  // Extracted text content from PDF/XLSX
  category    String?  // agua_potable, vertimientos, piscina, ruido, aire, fuentes_fijas, etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SamplingTemplate {
  id                  String   @id @default(uuid())
  name                String
  description         String
  oitType             String   // Tipo de OIT al que aplica
  steps               String   // JSON con los pasos del flujo
  reportTemplateFile  String?  // Nombre del archivo .docx de plantilla de informe
  startMessage        String?  // Rich text instruction shown at start
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// AI Feedback System - stores user corrections to improve AI outputs
model AIFeedback {
  id              String   @id @default(uuid())
  oitId           String?  // Related OIT if applicable
  category        String   // OIT_ANALYSIS, PROPOSAL, REPORT, TEMPLATE_MAPPING
  aiOutput        String   // Original AI-generated content
  userCorrection  String?  // User's corrected version
  rating          Int      @default(0) // 1-5 stars
  feedbackType    String   // CORRECT, PARTIAL, WRONG
  fieldName       String?  // Specific field that was wrong (e.g., "var_34")
  correctValue    String?  // What the correct value should be
  notes           String?  // Additional user notes
  applied         Boolean  @default(false) // Whether feedback was used to improve
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
